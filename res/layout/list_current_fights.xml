<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/super_frame" >

    <TextView
        android:id="@+id/tv_fight_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="02:14:34"
        android:textColor="@color/Green"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/separator_1"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/tv_fight_start"
        android:background="@drawable/super_frame" />

    <TextView
        android:id="@+id/tv_red_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/separator_1"
        android:text="(1)"
        android:textColor="@color/Red"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_duel_icon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/tv_red_number"
        android:background="@drawable/ic_duel_type" />

    <TextView
        android:id="@+id/tv_blue_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/iv_duel_icon"
        android:text="(1)"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/separator_2"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/tv_blue_number"
        android:background="@drawable/super_frame" />

    <TextView
        android:id="@+id/tv_red_name_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/separator_2"
        android:text="Name [level]"
        android:textColor="@color/Red"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_blue_name_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_red_name_level"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/separator_2"
        android:text="Name [level]"
        android:textColor="@color/Blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/separator_5"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/tv_name_and_level"
        android:background="@drawable/super_frame" />

</RelativeLayout>