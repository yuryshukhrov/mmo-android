<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_name_and_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:text="name [level]" />

    <ImageView
        android:id="@+id/iv_check_stats"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_name_and_level"
        android:layout_toRightOf="@+id/tv_name_and_level"
        android:background="@drawable/info"/>
    
    <ImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/iv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_name_and_level"
        android:layout_toRightOf="@+id/iv_check_stats"
        android:background="@drawable/male" />

</RelativeLayout>